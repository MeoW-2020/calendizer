<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ReminderListLayout_LinearLayout_Root">

    <androidx.cardview.widget.CardView
        android:id="@+id/ReminderListLayout_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_notifications_active_24"
                android:layout_marginRight="8dp"
                app:tint="?attr/iconColor" />
            <TextView
                android:id="@+id/ReminderListLayout_TextView_Notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/at_the_time_of_event"
                android:textColor="?attr/textColor"
                android:textSize="16sp"
                android:layout_weight="0.9"/>
            <ImageButton
                android:id="@+id/ReminderListLayout_ImageButton_Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_close_24"
                android:backgroundTint="@color/transparent"
                android:tint="?attr/textColor"
                android:layout_weight="0.1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/UpcomingLayoutCell_CheckBox_isDone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:buttonTint="@color/_6"
        android:enabled="false"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/LayoutCell_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10sp"
        app:cardBackgroundColor="?attr/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/UpcomingLayoutCell_ImageView_EventColor"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@color/__1" />

            <LinearLayout
                android:id="@+id/UpcomingEventsFragment_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/UpcomingLayoutCell_TextView_EventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event title"
                    android:textColor="?attr/textColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="3"/>
                <ImageView
                    android:id="@+id/UpcomingLayoutCell_ImageView_Birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/ic_baseline_cake_24"
                    android:visibility="visible"
                    android:layout_marginVertical="10dp"
                    app:tint="?attr/iconColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_baseline_today_24"
                            android:layout_marginRight="2dp"
                            app:tint="?attr/iconColor" />

                        <TextView
                            android:id="@+id/UpcomingLayoutCell_TextView_EventDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="22-05-2022"
                            android:textColor="?attr/textColor" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/UpcomingLayoutCell_LinearLayout_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_baseline_access_time_24"
                            android:layout_marginRight="2dp"
                            app:tint="?attr/iconColor" />

                        <TextView
                            android:id="@+id/UpcomingLayoutCell_TextView_EventTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="09:00"
                            android:textColor="?attr/textColor" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/UpcomingLayoutCell_LinearLayout_Loop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_history_24"
                        app:tint="?attr/iconColor" />

                </LinearLayout>



                <TextView
                    android:id="@+id/UpcomingLayoutCell_TextView_EventNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event description"
                    android:paddingBottom="4dp"
                    android:textColor="?attr/textColor"
                    android:maxLines="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.1">

                <ImageButton
                    android:id="@+id/UpcomingLayoutCell_ImageButton_Options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/ic_more"
                    android:padding="8dp"
                    android:layout_weight="0.1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>

                <ImageButton
                    android:id="@+id/UpcomingLayoutCell_ImageButton_Notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/ic_small_notification"
                    android:paddingHorizontal="8dp"
                    android:paddingBottom="8dp"
                    android:layout_weight="0.1"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>